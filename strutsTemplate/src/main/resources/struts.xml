<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
"http://struts.apache.org/dtds/struts-2.0.dtd">


<struts>

	<package name="default" extends="struts-default">
	
		<action name="login" class="com.ibm.actions.LoginAction" method="loginUser">
			<result name="SUCCESS">empList.jsp</result>
			<result name="ERROR">login.jsp</result>
		</action>
		
		<action name="update" class="com.ibm.actions.EditUserAction" method="editUser">
			<result name="SUCCESS">empEdit.jsp</result>
		</action>
		
		<action name="PrePop" class="com.ibm.actions.EditSaveAction" method="populate">
			<result name="SUCCESS">empEdit.jsp</result>
		</action>
		
		<action name="saveEditEmp" class="com.ibm.actions.EditSaveAction" method="saveChanges">
			<result name="SUCCESS">empList.jsp</result>
			<result name="ERROR">empEdit.jsp</result>
		</action>
		
		<action name="logout" class="com.ibm.actions.LogoutAction" method="logoutUser">
			<result name="SUCCESS">login.jsp</result>
		</action>


	</package>


</struts>